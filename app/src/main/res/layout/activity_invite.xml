<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="請輸入您的邀請碼："
        android:textColor="@color/dark_grey"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageHeader" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/editInviteCode"
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:background="@drawable/back_edittext"
        android:gravity="center"
        android:layout_marginTop="18dp"
        android:hint="請輸入邀請碼"
        android:textColor="@color/dark_grey"
        android:textColorHint="#bdc6d2"
        android:letterSpacing="0.03"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/buttonNext"
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:elevation="4dp"
        android:background="@drawable/back_button"
        android:text="下一步"
        android:textColor="@android:color/white"
        android:enabled="false"
        android:layout_marginTop="52dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editInviteCode" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textNoCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我沒有邀請碼"
        android:textColor="@color/dark_blue"
        android:layout_marginTop="23dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNext" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/grandma"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/invite_code_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>